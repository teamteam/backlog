.archive
  .row
    .col-lg-10.col-lg-offset-1
      %h1
        Archive

      %table.table
        - if @backlog_items.empty?
          %tr
            %td
              %em
                No archived items
        - else
          - @backlog_items.each do |backlog_item|
            %tr
              %td
                .status.pull-left
                  %i.icon-ok
                = backlog_item.name

                .pull-right
                  = link_to backlog_item_path(backlog_item), :title => "Edit item" do
                    %i.icon-pencil
                  = link_to backlog_item, :method => :delete, :title => "Remove item", :data => { confirm: "Are you sure?" } do
                    %i.icon-remove
