.backlog-item
  .row
    .col-lg-10.col-lg-offset-1
      %h1
        New Item

      = form_for @backlog_item, url: backlog_items_path, :html => { :role => "form", :class => "form-horizontal" } do |f|
        .form-group{:class => @backlog_item.errors.has_key?(:name) ? 'has-error' : ''}
          .col-lg-2.control-label
            = f.label :name
          .col-lg-8
            = f.text_field :name, :class => "form-control", :placeholder => @backlog_item.errors[:name].join('')

        .form-group
          .col-lg-2.control-label
          .col-lg-8
            = f.submit "Create", :class => 'btn btn-default'
