.backlog
  .row
    .col-lg-10.col-lg-offset-1
      %h1= "This Week"

      %table.table
        - if @backlog_items.empty?
          %tr
            %td
              %em
                No backlog items
        - else
          - @backlog_items.each do |backlog_item|
            %tr
              %td
                .pull-left
                  = link_to toggle_complete_backlog_item_path(backlog_item), :id => "toggle-#{backlog_item.id}" do
                    - if backlog_item.tasks.remaining.empty?
                      %i.icon-ok{ :class => backlog_item.completed ? 'completed' : '' }
                    - else
                      = backlog_item.tasks.remaining.count
                    = backlog_item.name

                .edit-controls.pull-right
                  = link_to backlog_item_path(backlog_item) do
                    %i.icon-pencil
                  = link_to backlog_item, :method => :delete, :id => "remove-#{backlog_item.id}", :data => { confirm: "Are you sure?" } do
                    %i.icon-remove
