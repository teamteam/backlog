.row
  .col-lg-8.col-lg-offset-2
    %h2= "This Week"

    %table.table
      - @backlog_items.each do |backlog_item|
        %tr{:class => ('success' if backlog_item.completed)}
          %td
            .pull-left= backlog_item.name
            = link_to backlog_item_path(backlog_item), :class => "pull-right" do
              %i.glyphicon.glyphicon-chevron-right
            = link_to backlog_item, :method => :delete, :id => "remove-#{backlog_item.id}", :class => "pull-right" do
              %i.glyphicon.glyphicon-remove
            = form_for backlog_item, url: update_backlog_item_path(backlog_item) do |f|
              - if backlog_item.completed
                = f.hidden_field :completed, :value => false
                = f.submit "Reopen", :class => 'btn btn-xs btn-info pull-right'
              - else
                = f.hidden_field :completed, :value => true
                = f.submit "Complete", :class => 'btn btn-xs btn-success pull-right'

    = link_to "Create Backlog item", new_backlog_item_path, :class => "btn btn-success"
